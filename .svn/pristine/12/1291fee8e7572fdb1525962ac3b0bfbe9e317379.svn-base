@Service("userService")
public class UserServiceImpl implements UserService{

    @Autowired
    private UserMapper userDao;

    /**
     *@描述 根据商户id查询商户
     *@参数  mer_id
     *@返回值  UserModel
     *@创建人  胡丛
     *@创建时间  2018/9/5
     *@修改人和其它信息
     */
   public UserModel selectUserById(Integer mer_id){
       UserModel userModel = userDao.selectUserById(mer_id);
       return userModel;
   }

    /**
     * 商户登录
     * @param mer_mobile 手机号
     * @param password 密码
     * @return
     */
    @Override
    public Map<String, Object> login(String mer_mobile, String password) throws UnifiedException {
        //参数校验
        if (!ValidatorUtils.isLoginMobile(mer_mobile)){
            throw new UnifiedException();
        }
        return null;
    }
}
